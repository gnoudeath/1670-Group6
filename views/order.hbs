<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order</title>
</head>
<body>
    <form action="/admin/order">
    <select name="findOrder" required>
      <option value="">Choose</option>
      <option value="today">Today</option>
      <option value="week">Week</option>
      
    </select>
    <button type="submit">Find</button>
    </div>
  <div>
    <table class="table table-borderless">
      <thead>
          <tr>
            <th>Name</th>
            <th>Time</th>
            <th>Status</th>
            <td>Update Status</td>
          </tr>
      </thead>
      <tbody>
        {{#each orderCustomer}}
        <form action="/admin/updatestatus" method="post">
        <input type="hidden" name="id" value="{{_id}}">
        <tr>
          <td>{{user}}</td>
          <td>{{date}}</td>
          <td>{{status}}</td>
          <td>
            <select name="status" id="status">
            <option value="Processing">Processing</option>
            <option value="Order confirmation">Order confirmation</option>
            <option value="Delivery in progress">Delivery in progress</option>
            <option value="Delivery successful">Delivery successful</option>
            <option value="Delivery failed">Delivery failed</option>
            </select>
            <button type="submit">
              Update Status
            </button>
          </td>
        </tr>
        </form>
        {{/each}}
      </tbody>
    </table>
  </div>
  </form>
</body>
</html>