                        </li>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="width: 85px;">
                            <h6> Role : {{userRole}}</h4>
                            <li>
                              <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="/profiles">Profile</a></li>
                            <br>
                            <li><a class="dropdown-item" href="/logout">Log out</a></li>
                        </div>
                    </div>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- thanh "danh muc sach" đã được ẩn bên trong + hotline + ho tro truc tuyen -->
    <section class="duoinavbar">
        <div class="container text-white">
            <div class="row justify">
                <div class="col-lg-3 col-md-5" style="display: contents;">
                    <div class="categoryheader">
                        <div class="noidungheader text-white">
                            <span class=" font-weight-bold ml-1">
                              <a href="" style="color: white; font-weight: 700;">Home</a></span>
                            </span>
                        </div>
                    </div>
                    <div class="categoryheader">
                        <div class="noidungheader text-white">
                            <i class="fa fa-bars"></i>
                            <span class=" font-weight-bold ml-1">Category</span>
                        </div>
                        <!-- CATEGORIES -->
                        <div class="categorycontent">
                            <ul>
                                {{#each cat}}
                                <li><a class="dropdown-item" href="#">{{cat_name}}</a></li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                    <div class="categoryheader">
                        <div class="noidungheader text-white">
                            <span class=" font-weight-wither ml-1" >
                              <a href="" style="color: white; font-weight: 700;">History</a></span>
                        </div>
                    </div>
                    <div class="categoryheader">
                        <div class="noidungheader text-white">
                            <span class=" font-weight-bold ml-1">
                              <a href="" style="color: white; font-weight: 700;">Ranking</a></span>
                            </span>
                        </div>
                    </div>

                    
                </div>
                
                <div class="col-md-5 ml-auto contact d-none d-md-block">
                    <div class="benphai float-right">
                        <div class="hotline">
                            <i class="fa fa-phone"></i>
                            <span>Hotline:<b>1900 1999</b> </span>
                        </div>
                        <i class="fas fa-comments-dollar"></i>
                        <a href="#">Online Support </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <div class="container">
        <br>
    <h2 class="text-success border-top border-bottom border-sucess " >Purchase History</h2>

        <table class="table">
    <thead>
        <tr>
        <th scope="col">Image</th>
        <th scope="col">Name</th>
        <th scope="col">Cat</th>
        <th scope="col">Price</th>
        <th scope="col">Quantity</th>
        <th scope="col">Total Money</th>
        <th scope="col">Date</th>
        
        <th scope="col">Status</th>
        <th scope="col">Request</th>

        </tr>
    </thead>
    <tbody>
        {{#each order}}
        <tr>
            {{#each book}}
            <td><img src="{{pic}}" alt="" style="width: 100px;"></td>
            <td>{{name}}</td>
            <td>{{cat.cat_name}}</td>
            <td>{{price}}</td>
            {{/each}}
            <td>{{quantity}}</td>
            <td>{{total_money}}</td>
            <td>{{date}}</td>
            
            <td>{{status}}</td>
            <td><button type="button" class="btn btn-primary"><a href="#"></a>Cancel</button></td>
        </tr>
        
        {{/each}}
    </tbody>
    </table>
        <footer>
        <div class="container py-4">
            <div class="row">
                <div class="col-md-3 col-xs-6">
                    <div class="gioithieu">
                        <h6 class="header text-uppercase font-weight-bold">About FPT Book Store</h6>
                        <a href="#">Introduct about DealBook</a>
                        <div class="fb-like" data-href="https://www.facebook.com/DealBook-110745443947730/"
                            data-width="300px" data-layout="button" data-action="like" data-size="small"
                            data-share="true"></div>
                    </div>
                </div>
                <div class="col-md-3 col-xs-6">
                    <div class="hotrokh">
                        <h6 class="header text-uppercase font-weight-bold">CUSTOMER SUPPORT</h6>
                        <a href="#">Ordering guide</a>
                        <a href="#">Payment methods</a>
                        <a href="#">Shipping method</a>
                        <a href="#">Return Policy</a>
                    </div>
                </div>
                <div class="col-md-3 col-xs-6">
                    <div class="lienket">
                        <h6 class="header text-uppercase font-weight-bold">COOPERATION AND LINKS</h6>
                        <img src="/img/dang-ky-bo-cong-thuong.png" alt="dang-ky-bo-cong-thuong">
                    </div>
                </div>
                <div class="col-md-3 col-xs-6">
                    <div class="ptthanhtoan">
                        <h6 class="header text-uppercase font-weight-bold">Payment methods</h6>
                        <img src="/img/visa-payment.jpg" alt="visa-payment">
                        <img src="/img/master-card-payment.jpg" alt="master-card-payment">
                        <img src="/img/jcb-payment.jpg" alt="jcb-payment">
                        <img src="/img/atm-payment.jpg" alt="atm-payment">
                        <img src="/img/cod-payment.jpg" alt="cod-payment">
                        <img src="/img/payoo-payment.jpg" alt="payoo-payment">
                    </div>
                </div>
            </div>
        </div>
    </footer>
    </div>
