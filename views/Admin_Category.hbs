<form action="/admin/category" method="post" style="margin-left: 20px;">
    <div class="form-group">
        
        Name:<input type="text" name="name" id="name" class="form-control" placeholder="Input name of category" style="width: 30%;">
    </div>
    
    <div class="form-group">
    <label for="textarea">Description</label>
    <textarea class="form-control" id="textarea"  name="desc" rows="3" style="width: 50%;height:100px;"></textarea>
    </div>
    <br>
        <button type="submit" class="btn btn-primary">Add category  </button>
    
</form>

<!-- MOdal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header"><h4 class="modal-title" id="myModalLabel">Update category</h4>
      </div>
      <div class="modal-body">
        <style>
          #profileForm input{
            min-width: 100%;
          }
        </style>
        <form id="profileForm" action="/admin/updatecat" method="POST">
        <input  type="hidden" name="id" value="">
        Name <input class="form-control" name="name" value="" >
        Desc <textarea class="form-control" name="desc"  style="min-height: 100px;" ></textarea>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Update </button>
        
      </div>
      </form>
    </div>
  </div>
</div>
</div>
  <script type="text/javascript">
