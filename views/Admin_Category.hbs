                    <h6 class="text-white text-capitalize ps-3">Category table </h6>
              </div>

            </div>             
                <table>
                    <thead>
                        <tr>
                            
                            <th>Name</th>
                            <th>Description</th>
                            <th colspan="2">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                            {{#each cat}}
                        <tr>
                            <td>{{cat_name}}</td>
                            <td>{{cat_desc}}</td>
                            <td><button class="btn btn-primary" data-name="{{cat_name}}" data-desc="{{cat_desc}}" data-id="{{_id}}" data-toggle="modal" data-target="#myModal">
					Update
				</button></td>
                            <td><a href="/admin/deletecat?id={{_id}}"><button class="btn btn-primary">Delete</button></a>
					
				</td>
                        </tr>
                        {{/each}}         
                    </tbody>
                </table>
          </div>
        </div>
      </div>
