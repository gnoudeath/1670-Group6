<body>

    <!-- header -->
    <nav class="navbar navbar-expand-md bg-white navbar-light">
        <div class="container">
            <!-- logo  -->
            <img src="https://previews.123rf.com/images/jovanas/jovanas1602/jovanas160201759/52212634-%E6%9C%AC%E3%83%AD%E3%82%B4-%E3%82%B5%E3%82%A4%E3%83%B3%E9%BB%92.jpg" alt="" style="max-width: 90px;">
            <a class="navbar-brand" href="#" onclick="returnback()" style="color: #CF111A;"><b>FPT BOOK STORE</b></a>

            <!-- navbar-toggler  -->
            <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse"
                data-target="#collapsibleNavId" aria-controls="collapsibleNavId" aria-expanded="false"
                aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>

            <div class="collapse navbar-collapse" id="collapsibleNavId">
                <!-- form tìm kiếm  -->
                <form class="form-inline ml-auto my-2 my-lg-0 mr-3">
                    <div class="input-group" style="width: 520px;">
                        <input type="text" class="form-control" aria-label="Small"
                            placeholder="Search books...">
                        <div class="input-group-append">
                            <button type="button" class="btn" style="background-color: #CF111A; color: white;">
                              <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/de/OOjs_UI_icon_search-ltr.svg/1200px-OOjs_UI_icon_search-ltr.svg.png" style="max-width: 20px;" alt="">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>

                <!-- ô đăng nhập đăng ký giỏ hàng trên header  -->
                <ul class="navbar-nav mb-1 ml-auto">
                    <div class="dropdown">
                        <li class="nav-item account" type="button" class="btn dropdown" data-toggle="dropdown">
                            <img src="https://banner2.cleanpng.com/20180329/zue/kisspng-computer-icons-user-profile-person-5abd85306ff7f7.0592226715223698404586.jpg" style="max-width: 35px;" alt="">
                            <a class="nav-link text-dark text" href="#" style="display:inline-block">Account: {{userName}} </a>
                        </li>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="width: 85px;">
                            <h6> Role : {{userRole}}</h4>
                            <li>
                              <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="/profiles">Profile</a></li>
                            <br>
                            <li><a class="dropdown-item" href="/logout">Log out</a></li>
                        </div>
                    </div>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- thanh "danh muc sach" đã được ẩn bên trong + hotline + ho tro truc tuyen -->
    <section class="duoinavbar">
        <div class="container text-white">
            <div class="row justify">
                <div class="col-lg-3 col-md-5" style="display: contents;">
                    <div class="categoryheader">
                        <div class="noidungheader text-white">
                            <span class=" font-weight-bold ml-1">
                              <a href="" style="color: white; font-weight: 700;">Home</a></span>
                            </span>
                        </div>
                    </div>
                    <div class="categoryheader">
                        <div class="noidungheader text-white">
                            <i class="fa fa-bars"></i>
                            <span class=" font-weight-bold ml-1">Category</span>
                        </div>
                        <!-- CATEGORIES -->
                        <div class="categorycontent">
                            <ul>
                                <li><a class="dropdown-item" href="#">{{cat.cat_name}}</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="categoryheader">
                        <div class="noidungheader text-white">
                            <span class=" font-weight-wither ml-1" >
                              <a href="" style="color: white; font-weight: 700;">History</a></span>
                        </div>
                    </div>
                    <div class="categoryheader">
                        <div class="noidungheader text-white">
                            <span class=" font-weight-bold ml-1">
                              <a href="" style="color: white; font-weight: 700;">Ranking</a></span>
                            </span>
                        </div>
                    </div>

                    
                </div>
                
                <div class="col-md-5 ml-auto contact d-none d-md-block">
                    <div class="benphai float-right">
                        <div class="hotline">
                            <i class="fa fa-phone"></i>
                            <span>Hotline:<b>1900 1999</b> </span>
                        </div>
                        <i class="fas fa-comments-dollar"></i>
                        <a href="#">Online Support </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- breadcrumb  -->
        <section class="breadcrumbbar">
            <div class="container">
                <ol class="breadcrumb mb-0 p-0 bg-transparent">
                    <li class="breadcrumb-item"><a href="/index">Home Page</a></li>
                    <li class="breadcrumb-item"><a href="#">{{cat.cat_name}}</a></li>
                    <li class="breadcrumb-item active"><a href="#">{{details.name}}</a></li>
                </ol>
            </div>
        </section>

    <!-- nội dung của trang  -->
    <section class="product-page mb-4">
        <div class="container">
            <!-- chi tiết 1 sản phẩm -->
            <div class="product-detail bg-white p-4">
                <div class="row">
                    <!-- ảnh  -->
                    <div class="col-md-5 khoianh">
                        <div class="anhto mb-4">
                            <a class="active" href="" data-fancybox="thumb-img">
                                <img class="product-image" src="{{details.pic}}" alt="" >
                            </a>
                        </div>
                    </div>
                    <!-- thông tin sản phẩm: tên, giá bìa giá bán tiết kiệm, các khuyến mãi, nút chọn mua.... -->
                    <div class="col-md-7 khoithongtin">
                        <div class="row">
                            <div class="col-md-12 header">
                                <h2 class="ten">{{details.name}}</h4>
                                <hr>
                            </div>
                            <div class="col-md-7">
                                <div class="gia">
                                    <div class="giaban">Selling price at FPT Book: <br>
                                    <h1 style="color: #f60d19;">{{details.price}} $</h1></div>
                                </div>
                                
                                <div class="uudai my-3">
                                    <h6 class="header font-weight-bold">Promotions and Offers at FPT Book:</h6>
                                    <ul>
                                        <li><b>Free ship </b>for orders from $99 in Ha Noi and $299 in other Provinces/Cities</li>
                                        <li><b>HOT book combo - 25% OFF </b><a href="#">>>Watch now</a></li>
                                        <li>Free Bookmark for every order</li>
                                        <li>Free book cover</li>
                                    </ul>
                                </div>
                                <form action="/details" method="POST">
                                <div class="soluong d-flex">
                                    <label class="font-weight-bold">Quantity: </label>
                                    <div class="input-number input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text btn-spin btn-dec">-</span>
                                        </div>
                                        <input type="hidden" name="id" value="{{details._id}}">
                                        <input type="text" value="1" class="soluongsp  text-center" name="quantity">
                                        <div class="input-group-append">
                                            <span class="input-group-text btn-spin btn-inc">+</span>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="nutmua btn w-100 text-uppercase">Buy now!</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- decripstion của 1 sản phẩm: giới thiệu , đánh giá độc giả  -->
                    <div class="product-description col-md-9">
                        <!-- 2 tab ở trên  -->
                        <nav>
                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                <a class="nav-item nav-link active text-uppercase" id="nav-gioithieu-tab"
                                    data-toggle="tab" href="#nav-gioithieu" role="tab" aria-controls="nav-gioithieu"
                                    aria-selected="true">Description</a>
                                <a class="nav-item nav-link text-uppercase" id="nav-danhgia-tab" data-toggle="tab"
                                    href="#nav-danhgia" role="tab" aria-controls="nav-danhgia"
                                    aria-selected="false">Feedback</a>
                            </div>
                        </nav>
                        <!-- nội dung của từng tab  -->
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active ml-3" id="nav-gioithieu" role="tabpanel"
                                aria-labelledby="nav-gioithieu-tab">
                                <p>
                                    <span>{{details.des}}</span>
                                </p>
                            </div>
                            <div class="tab-pane fade" id="nav-danhgia" role="tabpanel" aria-labelledby="nav-danhgia-tab">
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="tiledanhgia text-center">
                                            <div class="btn vietdanhgia mt-3">Write your feedback</div>
                                        </div>
                                        <!-- nội dung của form đánh giá  -->
                                        <form action="/feedback" method="post">
                                            <div class="formdanhgia">
                                            <h6 class="tieude text-uppercase">SEND YOUR FEEDBACK</h6>
                                            <span class="danhgiacuaban">Your feedback on this product:</span>
                                            <div class="form-group">
                                                <input type="text" class="txtComment w-100" name="feedback" placeholder="Your feedback on this product">
                                            </div>
                                            <div class="btn nutguibl" >
                                                <input type="submit" value="Submit">
                                            </div>
                                        </div>
                                        </form>
                                        
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <table>
                                <thead>
                                <th>Username</th>
                                <th>Product</th>
                                <th>Feedback</th>
                                </thead>
                                <tbody>
                                {{#each list}}
                                <tr>
                                    <td>{{username}}</td>
                                    <td>{{name}}</td>
                                    <td>{{feedback}}</td>

                                </tr>
                                {{/each}}
                                </tbody>
                            </table>
                            <!-- het tab nav-danhgia  -->
                        </div>
                        <!-- het tab-content  -->
                    </div>
                    <!-- het product-description -->
                </div>
                <!-- het row  -->
            </div>
            <!-- het product-detail -->
        </div>
        <!-- het container  -->
    </section>
    <!-- het product-page -->

    <!-- thanh cac dich vu :mien phi giao hang, qua tang mien phi ........ -->
